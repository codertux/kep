{{#each request in model}}
  {{#link-to "requests.show" request}}
    <li class="post text-center">
      <span class="post_title">{{request.title}}</span>
      <span class="post_excerpt">{{substr request.description 0 50}} [...]</span>
      <span class="left_icons">
         <i class="fa fa-camera"></i>
         <i class="fa fa-globe"></i>
       </span>
      <span class="right_icons">
         <i class="fa fa-money"></i>
         <i class="fa fa-gift"></i>
       </span>
    </li>
  {{/link-to}}
{{/each}}
